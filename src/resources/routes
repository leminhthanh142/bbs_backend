# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
# Post endpoints
GET         /api/posts                              controllers.restController.post.PostController.getAllPostWithPagination(page: Int ?= 1, size: Int ?= 10)
GET         /api/thumbnails/:thumbnail              controllers.restController.image.ImageController.getThumbnail(thumbnail: String)
POST        /api/posts                              controllers.restController.post.PostController.createPost()
GET         /api/posts/:id                          controllers.restController.post.PostController.getPostById(id: Int)
POST        /api/thumbnails                         controllers.restController.post.PostController.uploadThumbnailEditorJs()

# User endpoints
POST        /api/users/sign_up                      controllers.restController.user.UserController.createUser()

# Auth endpoints
POST        /api/auth/sign_in                       controllers.restController.auth.AuthController.signIn()
DELETE      /api/auth/sign_out                      controllers.restController.auth.AuthController.signOut()
